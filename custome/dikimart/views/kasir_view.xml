<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- dikimart.kasir tree view -->
    <record id="dikimart_kasir_view_tree" model="ir.ui.view">
        <field name="name">Daftar Kasir</field>
        <field name="model">dikimart.kasir</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name" />
                <field name="alamat" />
                <field name="tgl_lahir" />
                <field name="id_kasir" />
            </tree>
        </field>
    </record>

    <!-- dikimart.kasir form view -->
    <record id="dikimart_kasir_view_form" model="ir.ui.view">
        <field name="name">Form Kasir</field>
        <field name="model">dikimart.kasir</field>
        <field name="arch" type="xml">
            <form string="Cleaning Service">
                <sheet>
                    <group name="Cleaning Service" string="Cleaning Service">
                        <!-- Add your fields here -->
                        <field name="name" />
                        <field name="alamat" />
                        <field name="tgl_lahir" />
                        <field name="id_kasir" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- dikimart.kasir action window -->
    <record id="dikimart_kasir_action" model="ir.actions.act_window">
        <field name="name">Kasir</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dikimart.kasir</field>
        <field name="view_mode">tree,form</field>   
    </record>

    <menuitem
        id="dikimart_kasir_menu_act"
        name="Kasir"
        parent="dikimart_cleaningservice_menu_categ"
        action="dikimart_kasir_action"
        sequence="10"/>

</odoo>
